{
  "manifest_version": 3,
  "name": "Change Background",
  "version": "1.0",
  "description": "A simple Chrome extension to change the background color of a page.",
  "permissions": ["scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
